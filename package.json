{
  "name": "stack",
  "displayName": "Stack",
  "publisher": "geofflamrock",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stack.new",
        "title": "New Stack",
        "icon": "$(add)",
        "category": "Stack"
      },
      {
        "command": "stack.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Stack"
      },
      {
        "command": "stack.pull",
        "title": "Pull",
        "icon": "$(repo-pull)",
        "category": "Stack"
      },
      {
        "command": "stack.push",
        "title": "Push",
        "icon": "$(repo-push)",
        "category": "Stack"
      },
      {
        "command": "stack.delete",
        "title": "Delete",
        "icon": "$(trash)",
        "category": "Stack"
      },
      {
        "command": "stack.switch",
        "title": "Switch to branch",
        "icon": "$(live-share)",
        "category": "Stack"
      }
    ],
    "views": {
      "scm": [
        {
          "id": "stack",
          "name": "Stacks",
          "when": "workspaceFolderCount > 0 && git.state == initialized"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "stack.new",
          "when": "view == stack",
          "group": "navigation"
        },
        {
          "command": "stack.refresh",
          "when": "view == stack",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "stack.pull",
          "when": "viewItem == stack",
          "group": "inline"
        },
        {
          "command": "stack.push",
          "when": "viewItem == stack",
          "group": "inline"
        },
        {
          "command": "stack.delete",
          "when": "viewItem == stack"
        },
        {
          "command": "stack.switch",
          "when": "viewItem == branch",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/pluralize": "^0.0.33",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "pluralize": "^8.0.0"
  }
}
